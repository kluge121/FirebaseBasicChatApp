<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="hanbat.isl.baeminsu.firebasebasicchatapp.ProfileEdit.ProfileEdit">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_edit_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/propfile_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@drawable/gray_line" />

        <Button
            android:id="@+id/profile_edit_name_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/main_list_seletor"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="이름 변경"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@drawable/gray_line" />

        <Button
            android:id="@+id/profile_edit_mesasge_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/main_list_seletor"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="상태메세지 변경"
            android:textSize="20sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@drawable/gray_line" />

        <TextView
            android:id="@+id/profile_edit_mesasge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="17sp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
